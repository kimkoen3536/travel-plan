<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행 계획 제목"
        android:id="@+id/plan_name_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 이름"
        android:id="@+id/account_name_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;2014. 1. 1 ~ 2015. 4. 3&gt;"
        android:id="@+id/period_text"
        android:layout_below="@+id/plan_name_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:id="@+id/like_count_text"
        android:layout_below="@+id/account_name_text"
        android:layout_alignRight="@+id/account_name_text"
        android:layout_alignEnd="@+id/account_name_text" />
</RelativeLayout>