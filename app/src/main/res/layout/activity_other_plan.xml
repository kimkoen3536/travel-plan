<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kke.travelplan.PlanItemsActivity">

    <Spinner
        android:id="@+id/year_spinner"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:id="@+id/month_spinner"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/year_spinner" />
    <Spinner
        android:id="@+id/day_spinner"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/month_spinner" />

    <ListView
        android:id="@+id/plan_item_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_spinner"
        android:layout_alignParentLeft="true">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지도"
        android:onClick="mapButtonOnClick"
        android:layout_alignBottom="@+id/year_spinner"
        android:layout_toLeftOf="@+id/like_button"
        android:layout_toStartOf="@+id/like_button" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/like_button"
        android:background="@drawable/other_plan_btn"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/plan_item_list_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
