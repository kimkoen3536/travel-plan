<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kke.travelplan.PlanItemsActivity">


    <Spinner
        android:id="@+id/year_spinner"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:id="@+id/month_spinner"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/year_spinner" />
    <Spinner
        android:id="@+id/day_spinner"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/month_spinner" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지도"
        android:id="@+id/checkBox"
        android:layout_toLeftOf="@+id/like_button"
        android:layout_alignBottom="@+id/day_spinner" />

    <ListView
        android:id="@+id/plan_item_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_spinner"
        android:layout_alignParentLeft="true">
    </ListView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like_button"
        android:src="@drawable/ic_action_not_important"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/plan_item_list_view" />

</RelativeLayout>
